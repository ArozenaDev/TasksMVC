@model RegisterVM

@{
	ViewData["Title"] = "Registro";
}

<h1>Regístrate</h1>

<div class="card">
	<div class="card-body">
		<form asp-action="Register">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>

			<div class="mb-3">
				<label asp-for="Email" class="form-label"></label>
				<input asp-for="Email" autocomplete="off" class="form-control" />
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>

			<div class="mb-3">
				<label asp-for="Password" class="form-label"></label>
				<input asp-for="Password" class="form-control" />
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>

			<button class="btn-primary btn">Regístrate</button>
			<a class="btn btn-success" asp-action="login">Acceder</a>

			<a class="btn btn-success" asp-action="ExtLogin" asp-route-provider="Google">
				Continuar con Google
			</a>
		</form>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
